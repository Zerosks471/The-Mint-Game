{
  "name": "the-mint",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "setup": "./scripts/dev-setup.sh",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "db:generate": "pnpm --filter @mint/database generate",
    "db:push": "pnpm --filter @mint/database push",
    "db:migrate": "pnpm --filter @mint/database migrate",
    "db:studio": "pnpm --filter @mint/database studio",
    "db:seed": "pnpm --filter @mint/database seed",
    "admin:dev": "pnpm --filter @mint/admin-dashboard dev & pnpm --filter @mint/admin dev",
    "admin:api": "pnpm --filter @mint/admin-dashboard dev",
    "admin:web": "pnpm --filter @mint/admin dev",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/v1/subscriptions/webhook"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.1.0",
    "turbo": "^2.6.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
